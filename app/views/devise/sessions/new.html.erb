<h2 style="color:#fff">Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email , :style=>'color:#fff'%><br />
  <%= f.email_field :email, :autofocus => true , :placeholder=>"Type your email here..."%></div>

  <div><%= f.label :password , :style=>'color:#fff'%><br />
  <%= f.password_field :password , :placeholder=>"Type your password here..."%></div>

  <% if devise_mapping.rememberable? -%>
   <%= f.label :remember_me, :style=>'color:#fff' %>
    <div><%= f.check_box :remember_me %></div><br/>
  <% end -%>

  <div><%= f.submit "Sign in", :class=>'btn btn-primary' %></div> 

<% end %>

<%= render "devise/shared/links" %>
